# Include local hg settings.
%include ${HOME}/.hgrc_local

[ui]
ignore = ${HOME}/.hgignore

[diff]
git = 1

[extensions]
rebase =
mq =
graphlog =
color = 
pager =
purge =
record =
# Remember to `hg clone https://bitbucket.org/edgimar/crecord ${HOME}/bin/crecord`
hgext.crecord = ${HOME}/bin/crecord/crecord

[pager]
pager = less
quiet = True
attend = diff,status,log,qdiff,qseries,blame,annotate,outgoing,glog

[merge-tools]
vimdiff.executable = /usr/bin/vimdiff
vimdiff.args = $base $local $other -o $output
vimdiff.priority = 2

meld.gui=True
meld.args=--label='local' $local --label='base' $base --label='other' $other
meld.diffargs=-a --label='$plabel1' $parent --label='$clabel' $child
meld.priority = 1

