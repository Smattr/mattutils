# Sourced from mattutils:

[user]
	name = Matthew Fernandez
[color]
    ui = True
[pager]
    status = True
    diff = "less -FRSX +Gg"

[github]
	user = Smattr

[alias]
    co = clone
    st = status
    glog = log --graph
    incoming = "!git fetch origin master && git log ..origin/master"
    outgoing = "!git getch origin master && git log origin/master.."
    in = incoming
    out = outgoing
    root = rev-parse --show-toplevel

[merge]
    conflictstyle = diff3

[log]
    decorate = True

[include]
    path = .gitconfig_mattbin
