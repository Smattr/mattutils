# Keep the mplayer window on top.
ontop=yes

# Some video codecs don't zoom properly, so always enable software zooming.
zoom=yes

# File caching to mask patchy networks. These are on even for local files, but
# this doesn't matter as the local disk is typically fast.
cache=8192
cache-min=80.0

# Disable subtitles by default.
noautosub=yes

# Override volume hardware management.
softvol=yes
softvol-max=400

# Suppress cover art for MP3s.
[extension.mp3]
vo=null

# Also for M4As.
[extension.m4a]
vo=null
